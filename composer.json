{
    "name": "shopsys/coding-standards",
    "type": "library",
    "description": "Coding standards definition compatible with PSR-2",
    "keywords": ["code style", "coding standards", "PSR-2", "code quality"],
    "license": "MIT",
    "authors": [
        {
            "name": "Shopsys",
            "homepage": "https://www.shopsys.com/"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-tokenizer": "*",
        "friendsofphp/php-cs-fixer": "^2.14.0",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.1",
        "slevomat/coding-standard": "^6",
        "squizlabs/php_codesniffer": "^3.2.0",
        "symplify/easy-coding-standard": "7.2.*",
        "symfony/finder": "^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "symplify/easy-coding-standard-tester": "7.2.*"
    },
    "conflict": {
        "symplify/better-phpdoc-parser": "5.4.14|5.4.15"
    },
    "autoload": {
        "psr-4": {
            "Shopsys\\CodingStandards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\CodingStandards\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "9.0.x-dev"
        }
    }
}
